<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="local_joint_control_type" default="inertia_shaping_kangaroo_analytic_dob_control"/>
  <arg name="local_joint_control_pkg" default="inertia_shaping_effort_control"/>
  <arg name="ns" default=""/>
  <arg name="controller_pkg_name" default="kangaroo_controller_configuration"/>

  <include file="$(eval find(arg('local_joint_control_pkg')) + '/launch/' + arg('local_joint_control') + '.launch')" >
    <arg name="controller_pkg_name" value="$(arg controller_pkg_name)"/>
    <arg name="ns" value="$(arg ns)"/>
    <arg name="joint_name_1" value="leg_right_1_joint"/>
    <arg name="transmission_name" value="leg_right_yaw_transmission"/>
  </include> 

  <include file="$(eval find(arg('local_joint_control_pkg')) + '/launch/' + arg('local_joint_control') + '.launch')" >
    <arg name="controller_pkg_name" value="$(arg controller_pkg_name)"/>
    <arg name="ns" value="$(arg ns)"/>
    <arg name="joint_name_1" value="leg_right_2_joint"/>
    <arg name="joint_name_2" value="leg_right_3_joint"/>
    <arg name="transmission_name" value="leg_right_hip_transmission"/>
  </include> 

  <include file="$(eval find(arg('local_joint_control_pkg')) + '/launch/' + arg('local_joint_control') + '.launch')" >
    <arg name="controller_pkg_name" value="$(arg controller_pkg_name)"/>
    <arg name="ns" value="$(arg ns)"/>
    <arg name="joint_name_1" value="leg_right_4_joint"/>
    <arg name="joint_name_2" value="leg_right_5_joint"/>
    <arg name="transmission_name" value="leg_right_transmission"/>
  </include> 

  <include file="$(eval find(arg('local_joint_control_pkg')) + '/launch/' + arg('local_joint_control') + '.launch')" >
    <arg name="controller_pkg_name" value="$(arg controller_pkg_name)"/>
    <arg name="ns" value="$(arg ns)"/>
    <arg name="joint_name_1" value="leg_right_length_joint"/>
    <arg name="transmission_name" value="leg_right_length_transmission"/>
  </include>

  <include file="$(find pal_local_joint_control)/launch/no_control.launch" >
    <arg name="controller_pkg_name" value="$(arg controller_pkg_name)"/>
    <arg name="ns" value="$(arg ns)"/>
    <arg name="joint_name" value="leg_right_femur_joint"/>
  </include>

  <include file="$(find pal_local_joint_control)/launch/no_control.launch" >
    <arg name="controller_pkg_name" value="$(arg controller_pkg_name)"/>
    <arg name="ns" value="$(arg ns)"/>
    <arg name="joint_name" value="leg_right_knee_joint"/>
  </include>

</launch>