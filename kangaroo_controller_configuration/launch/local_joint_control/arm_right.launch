<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="local_joint_control_type" />
  <arg name="local_joint_control_pkg" />
  <arg name="ns" default=""/>
  <arg name="controller_pkg_name" default="kangaroo_controller_configuration"/>
  <arg name="safety_override" default="" />
  <arg name="disable_safety_for_joints" default=""/>
  <arg name="local_joint_control_arms" default="$(arg local_joint_control_type)"/>

  <include file="$(eval find(arg('local_joint_control_pkg')) + '/launch/' + arg('local_joint_control_arms') + '.launch')" >
    <arg name="controller_pkg_name" value="$(arg controller_pkg_name)"/>
    <arg name="ns" value="$(arg ns)"/>
    <arg name="joint_name" value="arm_right_1_joint"/>
    <arg name="safety_override" value="$(eval ('' if not 'arm_right_1_joint' in arg('disable_safety_for_joints') else (arg('safety_override') if arg('safety_override') != '' else 'false')))"/> 
  </include>

  <include file="$(eval find(arg('local_joint_control_pkg')) + '/launch/' + arg('local_joint_control_arms') + '.launch')" >
    <arg name="controller_pkg_name" value="$(arg controller_pkg_name)"/>
    <arg name="ns" value="$(arg ns)"/>
    <arg name="joint_name" value="arm_right_2_joint"/>
    <arg name="safety_override" value="$(eval ('' if not 'arm_right_2_joint' in arg('disable_safety_for_joints') else (arg('safety_override') if arg('safety_override') != '' else 'false')))"/>
  </include>

  <include file="$(eval find(arg('local_joint_control_pkg')) + '/launch/' + arg('local_joint_control_arms') + '.launch')" >
    <arg name="controller_pkg_name" value="$(arg controller_pkg_name)"/>
    <arg name="ns" value="$(arg ns)"/>
    <arg name="joint_name" value="arm_right_3_joint"/>
    <arg name="safety_override" value="$(eval ('' if not 'arm_right_3_joint' in arg('disable_safety_for_joints') else (arg('safety_override') if arg('safety_override') != '' else 'false')))"/>
  </include>

  <include file="$(eval find(arg('local_joint_control_pkg')) + '/launch/' + arg('local_joint_control_arms') + '.launch')" >
    <arg name="controller_pkg_name" value="$(arg controller_pkg_name)"/>
    <arg name="ns" value="$(arg ns)"/>
    <arg name="joint_name" value="arm_right_4_joint"/>
    <arg name="safety_override" value="$(eval ('' if not 'arm_right_4_joint' in arg('disable_safety_for_joints') else (arg('safety_override') if arg('safety_override') != '' else 'false')))"/>
  </include>

</launch>

