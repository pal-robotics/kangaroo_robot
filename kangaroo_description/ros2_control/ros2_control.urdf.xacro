<robot xmlns:xacro="http://ros.org/wiki/xacro" name="kangaroo">

  <!-- INCLUDES -->
  <xacro:include filename="$(find kangaroo_description)/urdf/pelvis/ros2_control.urdf.xacro" />
  <xacro:include filename="$(find kangaroo_description)/urdf/leg/ros2_control.urdf.xacro" />
  <xacro:include filename="$(find kangaroo_description)/urdf/arm/ros2_control.urdf.xacro" />
  <xacro:include filename="$(find kangaroo_description)/urdf/end_effector/ros2_control.urdf.xacro" />
  <!-- calibration offsets -->
  <xacro:include filename="$(find kangaroo_description)/urdf/calibration_constants.urdf.xacro" />

  <!-- MACRO DEFINITION-->
  <xacro:macro name="kangaroo_ros2_control" params="arm_type">

    <ros2_control name="ros2_control_kangaroo_system" type="system" is_async="${'true' if sim_type == 'no-simulation' else 'false'}">
      <xacro:if value="${sim_type == 'no-simulation'}" >
        <properties>
          <async thread_priority="70" affinity="[1]" scheduling_policy="detached"/>
        </properties>
      </xacro:if>
      <hardware>
        <xacro:if value="${sim_type == 'no-simulation'}">
          <plugin>robot_control/RobotControl</plugin>
          <param name="error_protection">true</param>
          <param name="expose_safety_interface">true</param>
          <param name="idle_mode_on_stop">true</param>
          <param name="idle_mode_on_stop_interfaces">[current, effort, torque]</param>
        </xacro:if>
        <xacro:unless value="${sim_type == 'no-simulation'}">
          <plugin>mujoco_ros2_control/MujocoSystemInterface</plugin>
          <!-- Override the slowdown settings in the Simulate App and run at 1x speed -->
          <param name="sim_speed_factor">1.0</param>
          <param name="pids_config_file">$(find kangaroo_mujoco)/config/pids.yaml</param>
          <param name="initial_keyframe">home</param>
        </xacro:unless>
      </hardware>


      <xacro:if value="${has_pelvis}">
        <xacro:pelvis_ros2_control />
      </xacro:if>
      
      <xacro:if value="${legs_type != 'no-leg'}">
        <xacro:leg_ros2_control side="left"/>
        <xacro:leg_ros2_control side="right"/>
      </xacro:if>

      <xacro:if value="${arm_type != 'no-arm'}">
        <xacro:arm_ros2_control side="left" arm_type="${arm_type}"/>
        <xacro:arm_ros2_control side="right" arm_type="${arm_type}"/>
      </xacro:if>
      
      <xacro:if value="${end_effector_type != 'no-end-effector'}">
        <xacro:end_effector_ros2_control side="left" end_effector_type="${end_effector_type}"/>
        <xacro:end_effector_ros2_control side="right" end_effector_type="${end_effector_type}"/>
      </xacro:if>

    </ros2_control>

  </xacro:macro>

</robot>
